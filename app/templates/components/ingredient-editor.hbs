{{input
  class='ingredient-editor-measure-input'
  value=(readonly ingredient.measure)
  size=1
  input=(action (pipe (action 'updateMeasure') (action onChange)))}}
{{input
  class='ingredient-editor-unit-input'
  value=(readonly ingredient.unit)
  size=1
  input=(action (pipe (action 'updateUnit') (action onChange)))}}
{{resource-picker
  class='ingredient-editor-resource-picker'
  selectedResourceId=ingredient.resourceId
  onChange=(action (pipe (action 'updateResource') (action onChange)))}}
<button
  class='btn btn-text'
  {{action onRemove}}>
  {{fa-icon 'times'}}
</button>